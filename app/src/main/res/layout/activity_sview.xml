<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SviewActivity">

    <ScrollView
        android:scrollbars="none"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/lg"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.35"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20dp"
                        android:typeface="serif"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:text="eduSoft Infotech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="13dp"
                        android:textColor="#000"
                        android:text="IT &amp; Web Services &amp; Softwares"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.65"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textSize="12dp"
                        android:text="Send Enquiry"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:background="@drawable/button_bg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="#A3A0A0"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="0.8dp"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="#000"
                    android:text="Jatin Tiwari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Managing Director"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textSize="20dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Product / Services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:layout_width="180dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="0.8dp"></LinearLayout>


                <TextView
                    android:textSize="13dp"
                    android:layout_marginBottom="10dp"
                    android:text="eduSoft Infotech is the highly acclaimed website design company in Lakhimpur Kheri (U.P.), established in 2010, providing solutions to business, corporates and startups to get their own custom website. We offer complete services for all your website needs. We have highly experienced team of Website Designer and Developers."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="20dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Contact Us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:layout_width="110dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="0.8dp"></LinearLayout>

                <TextView
                    android:textSize="13dp"
                    android:drawableLeft="@drawable/loc"
                    android:drawablePadding="5dp"
                    android:text="eduSoft Infotech Distt Hospital Road, Infront of Pratham Complex, Lakhimpur Kheri, Uttar Pradesh, 262701"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>